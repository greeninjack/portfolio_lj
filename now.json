{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@now/next"
    }
  ],
  "routes": [
    {
      "src": "/_next/static/(?:[^/]+/pages|chunks|runtime)/.+",
      "headers": {
        "cache-control": "immutable"
      }
    },
    {
      "src": "/^(\/)",
      "dest": "/?lang=en"
    },
    {
      "src": "/^(\/)(?<lang>[a-z]{2}$)",
      "dest": "/?lang=$lang"
    },
    {
      "src": "/(?<lang>.+)\/about",
      "dest": "/about?lang=$lang"
    },
    {
      "src": "/(?<lang>.+)\/work\/(?<slug>.+)",
      "dest": "/work?lang=$lang&slug=$slug"
    }
  ]
}